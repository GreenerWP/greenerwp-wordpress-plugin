{
	"name": "lowtechwp-wordpress-plugin",
	"config": {
		"parcel_build_command": "build"
	},
	"scripts": {
		"build:js": "cross-var parcel $npm_package_config_parcel_build_command --public-url . -d dist/js/ui/admin/ -o page.js js/ui/admin/page.js",
		"watch:js": "npm run build:js --lowtechwp-wordpress-plugin:parcel_build_command=watch",
		"build:css-admin": "cross-var parcel $npm_package_config_parcel_build_command --public-url . -d dist/css/ -o admin.css scss/admin.scss",
		"build:css-frontend": "cross-var parcel $npm_package_config_parcel_build_command --public-url . -d dist/css/ -o frontend.css scss/frontend.scss",
		"build:css": "npm run build:css-admin && npm run build:css-frontend",
		"watch:css-admin": "npm run build:css-admin --lowtechwp-wordpress-plugin:parcel_build_command=watch",
		"watch:css-frontend": "npm run build:css-frontend --lowtechwp-wordpress-plugin:parcel_build_command=watch",
		"test": "jest"
	},
	"devDependencies": {
		"@babel/plugin-proposal-object-rest-spread": "^7.6.2",
		"@babel/preset-env": "^7.6.2",
		"@babel/preset-react": "^7.0.0",
		"babel-core": "^7.0.0-bridge.0",
		"cross-var": "^1.1.0",
		"jest": "^24.9.0",
		"parcel": "^1.12.3",
		"sass": "^1.22.12"
	},
	"dependencies": {}
}
